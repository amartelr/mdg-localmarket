.std-ypadding() {
  padding-top: 2rem;
  padding-bottom: 2rem;
  @media screen and (min-width: 40em) {
    padding-top: 2.5rem;
    padding-bottom: 2.5rem;
  }
}

.std-xpadding() {
  padding-left: 1.25rem;
  padding-right: 1.25rem; //20
  @media screen and (min-width: 40em) {
    padding-left: 2.5rem;
    padding-right: 2.5rem; //40
  }
}
a {
  .transition( all 200ms ease-in );
  color: @color-primary;
  cursor: pointer;
  text-decoration: none;

  &:hover {
    color: darken(@color-primary, 10%);
  }
  &:active { color: @color-well; }

  //links that look like standard text
  &.nochrome { color: @color-well; }
  //links that are monochrome
  &.monochrome { color: @color-medium; }
}
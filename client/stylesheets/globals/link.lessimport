a, .pseudo-link {
  .transition( all 200ms ease-in );
  color: @color-primary;
  cursor: pointer;
  text-decoration: none;
  &:hover {
    color: darken(@color-primary, 10%);
  }
  &:active { color: @color-well; }

  //links that look like standard text
  &.nochrome { color: @color-well; }
  //links that are monocrhome
  &.monochrome { color: @color-medium; }
}

a.inverse {
  color: @color-empty;
  &:hover { color: @color-rare; }
  &:active { color: @color-medium-rare; }
}
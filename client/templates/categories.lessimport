.page.categories {
  padding-top: 3em;

  .subtitle-categories {
    .font-m1;
    .type-bold;
    display: block;
    line-height: 1;
    text-align: center;

    padding-top: .75rem;
    height: 3.5rem;
  }

  .list-categories {
    .item-category {
      .transform(translate3d(0,0,0));

      display: block;
      overflow: hidden;
      position: relative;
      text-align: center;

      height: 7.25rem;

      .name-category {
        .font-m2;
        .type-black;
        .title-caps;
        .position(absolute, 50%, 0, auto, 0);
        .transform(translate3d(0, -50%, 0));

        color: @color-empty;
        line-height: 1;


      }
      .count {
        .font-s1;
        .position(absolute, auto, 0, .25rem, 0);
        color: rgba(255,255,255,.7);
      }
    }
  }
}
